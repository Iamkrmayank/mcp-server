# Production Environment Configuration
# Copy this to .env and configure for your production environment

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Required: At least one API key must be configured
TAVILY_API_KEY=your_tavily_api_key_here
JINA_API_KEY=your_jina_api_key_here

# API Settings
TIMEOUT_SECONDS=30
MIN_CONFIDENCE=0.5

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# Requests per minute per client
RATE_LIMIT_PER_MINUTE=60

# Requests per hour per client
RATE_LIMIT_PER_HOUR=1000

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=100

# Burst limit (requests in 10 seconds)
BURST_LIMIT=10

# =============================================================================
# MEMORY MANAGEMENT
# =============================================================================
# Maximum execution history entries
MAX_EXECUTION_HISTORY=1000

# Maximum request size in MB
MAX_REQUEST_SIZE_MB=10

# Cleanup interval in seconds
CLEANUP_INTERVAL_SECONDS=300

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
# Redis URL for caching
REDIS_URL=redis://localhost:6379

# Cache TTL in seconds (1 hour default)
CACHE_TTL_SECONDS=3600

# Maximum cache size in MB
MAX_CACHE_SIZE_MB=100

# Enable cache compression
CACHE_COMPRESSION=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=agno_production.log

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Health check interval in seconds
HEALTH_CHECK_INTERVAL=60

# Metrics collection interval in seconds
METRICS_INTERVAL=300

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Enable request validation
ENABLE_REQUEST_VALIDATION=true

# Enable input sanitization
ENABLE_INPUT_SANITIZATION=true

# Maximum query length
MAX_QUERY_LENGTH=1000

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Connection pool size
CONNECTION_POOL_SIZE=20

# Keep-alive timeout
KEEP_ALIVE_TIMEOUT=30

# Request timeout
REQUEST_TIMEOUT=30

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Environment (development, staging, production)
ENVIRONMENT=production

# Server host
SERVER_HOST=0.0.0.0

# Server port (if using HTTP mode)
SERVER_PORT=8000

# Enable debug mode (false for production)
DEBUG=false
